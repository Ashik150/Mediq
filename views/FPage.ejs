    <script>
        // Array of image URLs
        const imageUrls = [
            'https://source.unsplash.com/900x900/?medical,Hospital',
            'https://source.unsplash.com/900x900/?medical,Doctor',
            'https://source.unsplash.com/900x900/?medical,Medicine'
        ];

        // Index to keep track of the current image
        let currentIndex = 0;

        // Function to change the image
        function changeImage() {
            document.getElementById('card-image').src = imageUrls[currentIndex];
            currentIndex = (currentIndex + 1) % imageUrls.length; // Increment index and loop back to 0 if exceeds length
        }

        // Change image every 5 seconds (5000 milliseconds)
        setInterval(changeImage, 5000);
    </script>
